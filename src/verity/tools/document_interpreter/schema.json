{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DIA Schema Output",
    "description": "Schema semántico generado por Document Interpreter Agent",
    "type": "object",
    "required": [
        "table_name",
        "columns",
        "confidence"
    ],
    "properties": {
        "table_name": {
            "type": "string",
            "description": "Nombre inferido de la tabla"
        },
        "columns": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": [
                    "name",
                    "type",
                    "role"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Nombre original de la columna"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "numeric",
                            "categorical",
                            "date",
                            "boolean",
                            "text"
                        ],
                        "description": "Tipo de dato inferido"
                    },
                    "role": {
                        "type": "string",
                        "enum": [
                            "metric",
                            "entity",
                            "time",
                            "filter",
                            "id",
                            "unknown"
                        ],
                        "description": "Rol semántico de la columna"
                    },
                    "allowed_ops": {
                        "type": "array",
                        "items": {
                            "type": "string",
                            "enum": [
                                "count",
                                "sum",
                                "avg",
                                "min",
                                "max",
                                "rank",
                                "distinct",
                                "filter"
                            ]
                        },
                        "description": "Operaciones permitidas para esta columna"
                    },
                    "description": {
                        "type": "string",
                        "description": "Descripción inferida de la columna"
                    },
                    "sample_values": {
                        "type": "array",
                        "maxItems": 5,
                        "description": "Valores de ejemplo"
                    },
                    "null_percentage": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 100,
                        "description": "Porcentaje de valores nulos"
                    }
                }
            }
        },
        "warnings": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Advertencias sobre calidad de datos o ambigüedades"
        },
        "ambiguities": {
            "type": "array",
            "items": {
                "type": "object",
                "required": [
                    "type",
                    "columns",
                    "question"
                ],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "multiple_metrics",
                            "multiple_entities",
                            "unclear_role"
                        ]
                    },
                    "columns": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "question": {
                        "type": "string",
                        "description": "Pregunta para el usuario"
                    }
                }
            },
            "description": "Ambigüedades que requieren input del usuario"
        },
        "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Confianza general del schema inferido"
        },
        "row_count": {
            "type": "integer",
            "description": "Número total de filas en el documento"
        },
        "source_file": {
            "type": "string",
            "description": "Nombre del archivo original"
        }
    }
}